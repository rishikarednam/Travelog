<%- include ('../partials/header') %>



        <header class="jumbotron jumbotron-fluid HeaderImg">
            <div class="container">
                <h1>Places Directory</h1>
                <p>From all over the world!</p>
                <p>
                   <a class="btn btn-primary btn-large" href="/places/new">Add New Place</a> 
                </p>
           
        </header>
        
        <div class="container">
        <div class="row text-center" style="display:flex; flex-wrap: wrap;">
            <% places.forEach(function(place){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img src="<%= place.image %>">
                        <div class="caption">                
                            <h4 class="font">   <%= place.name %>  </h4>
                        </div>
                        <p>
                             <%= place.date %>  
                        </p>
                    </div>
                </div>
            <% }); %>
        </div>
   </div>

<%-include ('../partials/footer') %>